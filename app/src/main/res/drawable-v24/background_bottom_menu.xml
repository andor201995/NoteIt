<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
        android:width="1dp"
        android:color="#38260D" />
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <corners
        android:bottomLeftRadius="8dip"
        android:bottomRightRadius="8dip"
        android:topLeftRadius="8dip"
        android:topRightRadius="8dip" />

    <gradient
        android:angle="45"
        android:centerX="50"
        android:centerY="50"
        android:endColor="#B79C3A"
        android:gradientRadius="100"
        android:startColor="#D40075"
        android:type="linear" />
</shape>